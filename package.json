{
  "name": "namaste-telegram-bot",
  "version": "1.0.0",
  "private": true,
  "description": "Telegram bot with scheduled spiritual daily messages based on deterministic rules",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "webhook:set": "node scripts/webhook.mjs set",
    "webhook:info": "node scripts/webhook.mjs info",
    "webhook:delete": "node scripts/webhook.mjs delete"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@bidyashish/panchang": "^1.0.4",
    "@supabase/supabase-js": "^2.49.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^8.57.1",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
